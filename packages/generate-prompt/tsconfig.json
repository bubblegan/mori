{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["."],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.*",
    "**/__mocks__/*",
    "**/__tests__/*"
  ]
}
